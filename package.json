{
    "name": "deakin-detonator-toolkit",
    "private": true,
    "version": "0.1.1",
    "scripts": {
        "dev": "node --max-old-space-size=4096 node_modules/vite/bin/vite.js",
        "build": "node --max-old-space-size=4096 node_modules/vite/bin/vite.js build",
        "preview": "node --max-old-space-size=4096 node_modules/vite/bin/vite.js preview",
        "tauri": "tauri",
        "style": "prettier --check .",
        "style:fix": "prettier --write .",
        "prepare": "husky install",
        "test": "vitest",
        "coverage": "vitest run --coverage",
        "update": "node cd_scripts/update.mjs"
    },
    "link-staged": {
        "*{tsx,css}": [
            "prettier --write",
            "git add"
        ]
    },
    "dependencies": {
        "@actions/github": "^6.0.0",
        "@emotion/react": "^11.14.0",
        "@mantine/core": "^5.10.5",
        "@mantine/form": "^5.10.5",
        "@mantine/hooks": "^5.10.5",
        "@mantine/notifications": "5.10.5",
        "@mantine/prism": "^5.10.5",
        "@mantine/spotlight": "^5.10.5",
        "@tabler/icons": "^1.119.0",
        "@tauri-apps/api": "^1.6.0",
        "dotenv": "^16.5.0",
        "node-fetch": "^3.3.2",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-router-dom": "6.3.0",
        "uuid": "^11.1.0"
    },
    "devDependencies": {
        "@tauri-apps/cli": "^1.6.3",
        "@testing-library/jest-dom": "^5.17.0",
        "@testing-library/react": "^13.4.0",
        "@types/react": "^18.3.20",
        "@types/react-dom": "^18.3.6",
        "@types/uuid": "^10.0.0",
        "@vitejs/plugin-react": "^4.4.1",
        "husky": "^8.0.3",
        "jsdom": "^20.0.3",
        "prettier": "2.8.8",
        "pretty-quick": "^3.3.1",
        "typescript": "^4.9.5",
        "vite": "^6.3.2",
        "vitest": "^3.1.2"
    }
}
